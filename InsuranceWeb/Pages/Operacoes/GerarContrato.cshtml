@page
@model InsuranceWeb.Pages.Operacoes.GerarContratoModel
@{
    ViewData["Title"] = "Gerar Contrato";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.ContratoResult != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <h5 class="alert-heading">
                                <i class="fa fa-check-circle"></i> Contrato Gerado com Sucesso!
                            </h5>
                            <hr>
                            <p><strong>ID do Contrato:</strong> <code>@Model.ContratoResult.ContratoId</code></p>
                            <p><strong>ID da Proposta:</strong> <code>@Model.ContratoResult.PropostaId</code></p>
                            <p class="mb-0"><strong>Mensagem:</strong> @Model.ContratoResult.Message</p>
                        </div>
                    }

                    @if (Model.Proposta != null)
                    {
                        <!-- Proposta Details -->
                        <div class="card mb-4 bg-light">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fa fa-file-text"></i> Detalhes da Proposta
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">ID da Proposta</h6>
                                        <p class="fw-bold"><code>@Model.Proposta.Id</code></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Status</h6>
                                        <p>
                                            <span class="badge @Model.GetStatusBadgeClass(Model.Proposta.StatusProposta)">
                                                @Model.GetStatusDisplayName(Model.Proposta.StatusProposta)
                                            </span>
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Automóvel</h6>
                                        <p class="fw-bold">@Model.Proposta.Automovel</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Condutor</h6>
                                        <p class="fw-bold">@Model.Proposta.Condutor</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Valor do Automóvel</h6>
                                        <p class="fw-bold text-success">@Model.Proposta.ValorAutomovel.ToString("C")</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-muted">Valor da Proposta</h6>
                                        <p class="fw-bold text-primary fs-5">@Model.Proposta.ValorProposta.ToString("C")</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.ContratoResult == null)
                        {
                            <!-- Contract Generation Form -->
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                
                                <input asp-for="GerarContratoRequest.PropostaId" type="hidden" />
                                
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">
                                            <i class="fa fa-file-contract"></i> Informações do Contrato
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label asp-for="GerarContratoRequest.UserId" class="form-label"></label>
                                                    <input asp-for="GerarContratoRequest.UserId" class="form-control" placeholder="Digite o ID do usuário responsável" />
                                                    <span asp-validation-for="GerarContratoRequest.UserId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="GerarContratoRequest.DataVigenciaInicio" class="form-label"></label>
                                                    <input asp-for="GerarContratoRequest.DataVigenciaInicio" class="form-control" type="date" />
                                                    <span asp-validation-for="GerarContratoRequest.DataVigenciaInicio" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="GerarContratoRequest.DataVigenciaFim" class="form-label"></label>
                                                    <input asp-for="GerarContratoRequest.DataVigenciaFim" class="form-control" type="date" />
                                                    <span asp-validation-for="GerarContratoRequest.DataVigenciaFim" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="alert alert-info">
                                            <i class="fa fa-info-circle"></i>
                                            <strong>Atenção:</strong> Ao gerar o contrato, a proposta será vinculada permanentemente. 
                                            Verifique todas as informações antes de confirmar.
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <a asp-page="./Index" class="btn btn-secondary">
                                        <i class="fa fa-arrow-left"></i> Voltar
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fa fa-file-contract"></i> Gerar Contrato
                                    </button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="d-flex justify-content-between mt-4">
                                <a asp-page="./Index" class="btn btn-secondary">
                                    <i class="fa fa-arrow-left"></i> Voltar para Operações
                                </a>
                                <a asp-page="./Status" asp-route-propostaId="@Model.Proposta.Id" class="btn btn-outline-info">
                                    <i class="fa fa-search"></i> Consultar Status Novamente
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <script>
        // Set default dates (1 year validity)
        document.addEventListener('DOMContentLoaded', function() {
            const hoje = new Date();
            const umAnoDepois = new Date(hoje.getFullYear() + 1, hoje.getMonth(), hoje.getDate());
            
            const dataInicio = document.querySelector('input[name="GerarContratoRequest.DataVigenciaInicio"]');
            const dataFim = document.querySelector('input[name="GerarContratoRequest.DataVigenciaFim"]');
            
            if (dataInicio && !dataInicio.value) {
                dataInicio.value = hoje.toISOString().split('T')[0];
            }
            
            if (dataFim && !dataFim.value) {
                dataFim.value = umAnoDepois.toISOString().split('T')[0];
            }
        });
    </script>
}
